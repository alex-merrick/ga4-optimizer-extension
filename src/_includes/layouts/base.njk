    {% if page.url == '/features/' or page.url == '/documentation/' %}
    <style>
        .docs-layout { display: flex; gap: 40px; margin-top: 20px; }
        #docs-sidebar { width: 240px; flex-shrink: 0; position: sticky; top: 100px; align-self: flex-start; border: 1px solid var(--border-color); background-color: var(--bg-light); border-radius: 6px; max-height: calc(100vh - 120px); overflow-y: auto; scrollbar-width: thin; scrollbar-color: var(--brand-purple) var(--bg-light); }
        .sidebar-title { font-size: 1.1em; font-weight: 600; color: var(--brand-purple-dark); margin: 0; padding: 12px 15px; border-bottom: 1px solid var(--border-color); }
        .sidebar-content { padding: 8px 12px; }
        #docs-sidebar::-webkit-scrollbar { width: 8px; }
        #docs-sidebar::-webkit-scrollbar-track { background: var(--bg-light); border-radius: 4px; }
        #docs-sidebar::-webkit-scrollbar-thumb { background-color: var(--brand-purple); border-radius: 4px; opacity: 0.6; }
        #docs-sidebar::-webkit-scrollbar-thumb:hover { opacity: 1; }

        #docs-sidebar::after { content: ''; position: absolute; bottom: 0; left: 0; right: 0; height: 15px; background: linear-gradient(transparent, var(--bg-light)); pointer-events: none; opacity: 0; transition: opacity 0.3s ease; border-radius: 0 0 6px 6px; }
        #docs-sidebar.has-scroll::after { opacity: 1; }
        #docs-sidebar ul { list-style-type: none; padding-left: 0; margin: 0; }
        #docs-sidebar ul li a { display: block; padding: 3px 8px; font-size: 0.9em; color: var(--text-light); text-decoration: none; border-radius: 4px; transition: background-color 0.2s ease, color 0.2s ease; font-weight: 500; }
        #docs-sidebar ul li a:hover { background-color: #e9e6ed; color: var(--brand-purple); }
        #docs-sidebar ul li a.active { background-color: var(--brand-purple); color: var(--bg-white); font-weight: 600; }
        #docs-sidebar ul ul { padding-left: 15px; margin-top: 4px; margin-bottom: 4px; }
        #docs-sidebar ul ul li a { font-size: 0.9em; padding: 3px 8px; }
        .docs-content { flex-grow: 1; min-width: 0; font-size: 1.05em; }
        .docs-content section { border-top: 1px solid var(--border-color); padding-top: 20px; margin-top: 20px; }
        .docs-content section:first-child { border-top: none; margin-top: 0; padding-top: 0; }
        .note, .requirement-note { padding: 14px 20px; margin: 18px 0; font-size: 1em; border-radius: 4px; border-left: 4px solid; }
        .note { background-color: #f0e6f7; border-color: var(--brand-purple); }
        .requirement-note { background-color: #fdf1e6; border-color: #F9AB00; }
        .note strong { color: var(--brand-purple-dark); }
        .requirement-note strong { color: #532e01; }
        .settings-gear-inline { width: 16px; height: 16px; vertical-align: -0.2em; object-fit: contain; margin: 0 2px; filter: grayscale(20%) opacity(85%); }
        /* Documentation page specific styles */
        .page-header { display: flex; align-items: center; justify-content: flex-start; border-bottom: 1px solid var(--border-color); padding: 20px 0; margin-bottom: 30px; }
        .header-icon { width: 40px; height: 40px; margin-right: 15px; }
        .page-header h1 { margin: 0; font-size: 2.2em; }
        .purple-strong { color: var(--brand-purple); }
        .settings-access-note { font-style: italic; color: #6c757d; font-size: 0.95em; margin-top: 5px; display: block; }
        .settings-gear-inline { display: inline-block; width: 16px; height: 16px; vertical-align: -0.2em; object-fit: contain; margin: 0 2px; filter: grayscale(20%) opacity(85%); }
        .copy-feedback-example { display: inline-block; background-color: #333333; color: white; padding: 2px 6px; border-radius: 3px; font-size: 0.9em; font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, Courier, monospace; }
        .pulsing-warning-emoji { display: inline-flex; align-items: center; justify-content: center; width: 1.4em; height: 1.4em; border-radius: 50%; animation: ga4-optimizer-pulse 1.5s infinite ease-out; position: relative; font-size: inherit; line-height: 1; vertical-align: -0.15em; margin: 0 0.1em; }
        @keyframes ga4-optimizer-pulse { 0% { transform: scale(1.15); box-shadow: 0 0 0 0 rgba(255, 152, 0, 0.7); } 70% { transform: scale(1.25); box-shadow: 0 0 5px 10px rgba(255, 152, 0, 0); } 100% { transform: scale(1.15); box-shadow: 0 0 0 0 rgba(255, 152, 0, 0); } }
        kbd { background-color: #f8f9fa; border: 1px solid #dee2e6; border-radius: 3px; padding: 2px 6px; font-family: monospace; font-size: 12px; color: #495057; }
        @media (prefers-color-scheme: dark) { kbd { background-color: #2c3034; border-color: #495057; color: #e9ecef; } }
        .cta-box { background-color: var(--bg-light); padding: 25px; border-radius: 8px; text-align: center; margin-top: 30px; border: 1px solid var(--border-color); }
        .cta-box h3 { margin-top: 0; color: var(--text-dark); }
        .other-browsers-link { margin-top: 15px; font-size: 0.9em; color: var(--text-light); }
        .accordion-container { margin-top: 20px; }
        .accordion-item { border: 1px solid var(--border-color); border-radius: 4px; margin-bottom: 10px; overflow: hidden; }
        .accordion-item:last-child { margin-bottom: 0; }
        .accordion-button { background-color: var(--bg-light); color: var(--brand-purple-dark); cursor: pointer; padding: 15px 20px; width: 100%; text-align: left; border: none; outline: none; font-size: 1.1em; font-weight: 600; transition: background-color 0.3s ease; display: flex; justify-content: space-between; align-items: center; }
        .accordion-button:hover, .accordion-button.active { background-color: #e9e6ed; }
        .accordion-button.active { color: var(--brand-purple); }
        .accordion-button::after { content: '+'; font-size: 1.3em; font-weight: bold; color: var(--brand-purple); transition: transform 0.2s ease-out; margin-left: 10px; }
        .accordion-button.active::after { content: "–"; }
        .accordion-panel { padding: 0 20px; background-color: white; max-height: 0; overflow: hidden; transition: max-height 0.3s ease-out, padding 0.3s ease-out; }
        .accordion-panel.active { padding: 15px 20px; }
        .accordion-panel p:first-child, .accordion-panel ul:first-child, .accordion-panel ol:first-child { margin-top: 0; }
        .accordion-panel p:last-child, .accordion-panel ul:last-child, .accordion-panel ol:last-child { margin-bottom: 0; }
        @media (max-width: 900px) { .docs-layout { flex-direction: column; gap: 0; } #docs-sidebar { width: 100%; position: sticky; top: 70px; height: auto; z-index: 900; overflow-y: visible; margin-bottom: 20px; } .sidebar-title { cursor: pointer; position: relative; background-color: var(--bg-light); } .sidebar-title::after { content: '▾'; position: absolute; right: 20px; top: 50%; transform: translateY(-50%); font-size: 1.2em; transition: transform 0.3s ease; } #docs-sidebar.is-open .sidebar-title::after { transform: translateY(-50%) rotate(180deg); } .sidebar-content { max-height: 0; overflow: hidden; padding: 0 15px; margin: 0; transition: max-height 0.4s ease-out, padding 0.4s ease-out; background-color: var(--bg-light); border-top: 1px solid var(--border-color); position: relative; } #docs-sidebar.is-open .sidebar-content { padding: 15px; max-height: calc(100vh - 140px); overflow-y: auto; -webkit-overflow-scrolling: touch; scrollbar-width: thin; scrollbar-color: var(--brand-purple) transparent; } #docs-sidebar.is-open .sidebar-content::-webkit-scrollbar { width: 6px; } #docs-sidebar.is-open .sidebar-content::-webkit-scrollbar-track { background: transparent; } #docs-sidebar.is-open .sidebar-content::-webkit-scrollbar-thumb { background-color: var(--brand-purple); border-radius: 3px; opacity: 0.7; } #docs-sidebar.is-open .sidebar-content::-webkit-scrollbar-thumb:hover { opacity: 1; } #docs-sidebar.is-open .sidebar-content::after { content: ''; position: absolute; bottom: 0; left: 0; right: 0; height: 20px; background: linear-gradient(transparent, var(--bg-light)); pointer-events: none; opacity: 0; transition: opacity 0.3s ease; } #docs-sidebar.is-open .sidebar-content.has-scroll::after { opacity: 1; } #docs-sidebar.is-open .sidebar-title { border-bottom-left-radius: 0; border-bottom-right-radius: 0; } #docs-sidebar ul { margin: 0; } }
    </style>
    {% endif %}

