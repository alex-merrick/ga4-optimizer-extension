    <header class="site-header">
        <div class="nav-container">
            <a href="/" class="brand-logo">
                <img src="/icons/icon128-min.png" alt="GA4 Optimizer Logo">
                <span class="brand-name">GA4 Optimizer</span>
            </a>
            <nav class="main-nav">
                <ul>
                    <li><a href="/" {% if page.url == '/' %}class="active" aria-current="page"{% endif %}>Home</a></li>
                    <li><a href="/blog/" {% if page.url.startsWith('/blog') %}class="active" aria-current="page"{% endif %}>Blog</a></li>
                    <li><a href="/documentation.html" {% if page.url == '/documentation.html' %}class="active" aria-current="page"{% endif %}>Documentation</a></li>
                    <li><a href="/privacy.html" {% if page.url == '/privacy.html' %}class="active" aria-current="page"{% endif %}>Privacy</a></li>
                    <li><a href="https://chromewebstore.google.com/detail/ga4-optimizer/hlldjkhoepkephgaeifgbelgchncfnjj" class="cta-button" target="_blank" rel="noopener noreferrer">Add to Chrome</a></li>
                </ul>
            </nav>
            <button class="nav-toggle" aria-label="Toggle navigation">
                <span></span>
            </button>
        </div>
    </header>

    {{ content | safe }}

    <!-- Video Modal Structure -->
    <div id="videoModal" class="video-modal">
        <div class="modal-content">
            <button class="modal-close-button">×</button>
            <div class="video-wrapper">
                <!-- Iframe will be used for YouTube links, video tag for local files -->
                <iframe id="modalVideoPlayer" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <video id="modalVideoPlayerLocal" controls style="display:none; width:100%; height:auto;"></video>
            </div>
        </div>
    </div>

    <footer class="site-footer">
        <p>© 2025 GA4 Optimizer. All rights reserved.</p>
        <p>
            <a href="/privacy.html">Privacy Policy</a>
            <span>•</span>
            <a href="mailto:support@gaoptimizer.com">Contact Support</a>
        </p>
    </footer>

    <script src="/documentation.js"></script>
</body>
</html>