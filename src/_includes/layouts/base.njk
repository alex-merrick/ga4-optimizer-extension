    <title>{{ title }}</title>
    <meta name="description" content="{{ description }}">
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" href="/icons/icon128-min.png" type="image/png">
    <link rel="canonical" href="https://www.gaoptimizer.com{{ page.url }}" />

    <!-- Schema will be injected here if provided -->
